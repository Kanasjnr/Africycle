# Smart Contract Package Environment Variables
# Copy this file to .env and fill in the actual values
# See docs/ENVIRONMENT.md for detailed explanations

# ======================
# REQUIRED VARIABLES
# ======================

# Deployer account private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# CeloScan API key (get from https://celoscan.io)
CELOSCAN_API_KEY=your_celoscan_api_key_here

# ======================
# OPTIONAL VARIABLES
# ======================

# Alfajores testnet RPC URL (override default)
ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org

# Celo mainnet RPC URL (override default)
CELO_RPC_URL=https://forno.celo.org

# Enable gas reporting (true/false)
REPORT_GAS=false

# Enable contract verification (true/false)
VERIFY_CONTRACTS=false

# Run tests in parallel (true/false)
PARALLEL_TESTS=false

# Generate coverage reports (true/false)
COVERAGE_REPORT=false
