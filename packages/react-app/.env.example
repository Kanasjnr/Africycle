# Frontend Application Environment Variables
# Copy this file to .env and fill in the actual values
# See docs/ENVIRONMENT.md for detailed explanations

# ======================
# REQUIRED VARIABLES
# ======================

# Celo network RPC URL (default: Alfajores testnet)
NEXT_PUBLIC_CELO_RPC_URL=https://alfajores-forno.celo-testnet.org

# Deployed smart contract address (must be a valid Ethereum address)
NEXT_PUBLIC_AFRICYCLE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# WalletConnect project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WC_PROJECT_ID=your_walletconnect_project_id_here

# PostgreSQL database URL (used by Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/africycle

# Cloudinary cloud name (get from Cloudinary dashboard)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# Cloudinary upload preset (get from Cloudinary dashboard)
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Full Cloudinary URL (get from Cloudinary dashboard)
CLOUDINARY_URL=cloudinary://api_key:api_secret@your-cloud-name

# ======================
# OPTIONAL VARIABLES
# ======================

# Environment mode (development/production)
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=false
